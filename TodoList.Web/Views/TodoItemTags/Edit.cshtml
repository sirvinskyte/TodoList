@model TodoList.Web.ViewModel.TodoItemTagViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>TodoItemTag</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="oldTodoItemId" value="@ViewBag.OldTodoItemId" />
            <input type="hidden" name="oldTagId" value="@ViewBag.OldTagId" />
            <div class="form-group">
                <label asp-for="TodoItem" class="control-label"></label>
                <select asp-for="TodoItemId" class="form-control" asp-items="ViewBag.TodoItemId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Tag" class="control-label"></label>
                <select asp-for="TagId" class="form-control" asp-items="ViewBag.TagId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
